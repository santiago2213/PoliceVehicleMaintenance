@model DiscussionLibrarySantiago.Vehicle

@{
    ViewData["Title"] = "EditVehicle";
}

<h1>EditVehicle</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4" method="post">
        <form asp-action="EditVehicle">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="VehicleId" />
            <input type="hidden" asp-for="VehicleAddedBySupervisorId" />
            <input type="hidden" asp-for="VehicleAddedDateTime" />


            <div class="form-group">
                <label asp-for="VehicleMakeId" class="control-label"></label>
                <select asp-for="VehicleMakeId" 
                asp-items="ViewBag.AllMakes" class="form-control" 
                id="VehicleMakeId">
                </select>
                <span asp-validation-for="VehicleMakeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VehicleModelId" class="control-label"></label>
                <select asp-for="VehicleModelId"
                        asp-items="ViewBag.AllModels" class="form-control"
                        id="VehicleModelId">
                </select>
                <span asp-validation-for="VehicleModelId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="VehicleAddedBySupervisorId" class="control-label"></label>
                <input asp-for="VehicleAddedBySupervisorId" class="form-control" disabled />
                <span asp-validation-for="VehicleAddedBySupervisorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VehicleAddedDateTime" class="control-label"></label>
                <input asp-for="VehicleAddedDateTime" class="form-control" disabled />
                <span asp-validation-for="VehicleAddedDateTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VIN" class="control-label"></label>
                <input asp-for="VIN" class="form-control" />
                <span asp-validation-for="VIN" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DatePurchased" class="control-label"></label>
                <input asp-for="DatePurchased" class="form-control" />
                <span asp-validation-for="DatePurchased" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mileage" class="control-label"></label>
                <input asp-for="Mileage" class="form-control" />
                <span asp-validation-for="Mileage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VehicleStatus" class="control-label"></label>
                <select asp-for="VehicleStatus"
                    asp-items="Html.GetEnumSelectList<VehicleStatusOptions>()"
                    class="form-control">
                </select>
                <span asp-validation-for="VehicleStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SearchVehicles">Back to Vehicle List</a>
</div>

